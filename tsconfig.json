{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "composite": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,

        "allowImportingTsExtensions": true,
        "rewriteRelativeImportExtensions": true,

        /* Linting */
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "verbatimModuleSyntax": true
    }
}
