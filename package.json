{
    "name": "@eighty4/dank",
    "version": "0.0.5-2",
    "type": "module",
    "license": "MIT",
    "author": "Adam McKee Bennett <adam.be.g84d@gmail.com>",
    "packageManager": "pnpm@10.28.0",
    "engines": {
        "node": ">=24"
    },
    "description": "Multi-page development system for CDN-deployed websites",
    "keywords": [
        "frontend",
        "bundler",
        "esbuild",
        "dank"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/eighty4/dank"
    },
    "bin": "./lib_js/bin.js",
    "exports": {
        ".": {
            "node": "./lib_js/dank.js",
            "types": "./lib_types/dank.d.ts",
            "import": "./lib/dank.ts"
        }
    },
    "scripts": {
        "build": "pnpm build:client && pnpm build:lib",
        "build:client": "node scripts/build_client.ts",
        "build:lib": "tsc && tsc -p tsconfig.exports.json",
        "build:release": "pnpm build && node scripts/prepare_release.ts",
        "fmt": "prettier --write .",
        "fmtcheck": "prettier --check .",
        "test": "node --test \"test/**/*.test.ts\"",
        "test:rebuild": "pnpm build && pnpm test",
        "typecheck": "tsc --noEmit && tsc -p tsconfig.client.json --noEmit"
    },
    "dependencies": {
        "esbuild": "^0.25.10",
        "mime": "^4.1.0",
        "parse5": "^8.0.0"
    },
    "devDependencies": {
        "@types/node": "^24.5.2",
        "prettier": "^3.6.2",
        "typescript": "^5.9.2"
    },
    "files": [
        "client/client.js",
        "lib/*.ts",
        "lib_js/*.js",
        "lib_types/*.d.ts"
    ]
}
